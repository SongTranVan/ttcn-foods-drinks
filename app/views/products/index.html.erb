<%= provide :title, t(".title") %>
<div class="container" style="margin-top:50px; margin-bottom: 15px">
  <div class="row">
    <div class="col-12 col-sm-3">
      <div class="card bg-light mb-3">
        <div class="card-header text-white text-uppercase" style="background: brown; font-size: 15px;">
          <i class="fas fa-list-ul"></i>&nbsp;&nbsp; Categories
        </div>
        <ul class="list-group category_block" id="ulli">
            <li class="list-group-item text-center text-uppercase"><%= link_to "All", products_path %></li>
            <li class="list-group-item text-center text-uppercase"><%= link_to "FOODS", products_path(category_id: 1)%></li>
            <li class="list-group-item text-center text-uppercase"><%= link_to "DRINKS", products_path(category_id: 2)%></li>
        </ul>
    </div>
    <div class="card bg-light mb-3">
      <div class="card-header text-white text-uppercase" style="background: brown;font-size: 15px;">OURS NEW PRODUCT</div>
      <div class="card-body">
        <% @new_products.each do |new_product|%>
        <%= link_to image_tag(new_product.images), new_product %>
        <h5 class="card-title"><b><%= new_product.name %></b></h5>
        <p class="card-text"><%= new_product.description %></p>
        <p id="giatien" class="bloc_left_price"><%= number_to_currency new_product.price %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="row">
      <%= render @products %>
    </div>
    <div class="row">
      <%= will_paginate @products, :class => "pagination" %>
    </div>
</div>
