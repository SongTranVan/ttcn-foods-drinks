<% provide :title, t(".title") %>
<section class="login-block">
  <div class="container container1">
    <div class="row">
        <div class="col-md-4 login-sec">
            <h2 class="text-center">Login Now</h2>
            <%= form_for(:session, url: login_path, :html => {:class => "login-form"})  do |f| %>
              <div class="form-group">
                <%= f.label :email, t(".email"), for: "exampleInputEmail1", class: "text-uppercase"%>
                <%= f.email_field :email, class: "form-control", placeholder: "" %>
              </div>
              <div class="form-group">
                <%= f.label :password, t(".password"), for: "exampleInputPassword1", class: "text-uppercase"%>
                <%= link_to t(".forgot_password"), new_password_reset_path, style:"color: cadetblue;" %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="form-check">
                <%= f.label :remember_me, t(".remember"), class: "checkbox inline" do %>
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <span><%= t ".remember_title" %></span>
                <% end %>
              </div>
              <div class="btn-login">
                <%= f.submit t(".login"), id: "login", class: "btn btn-login text-uppercase" %>
              </div>
            <% end %>
        <div class="copy-text">Don't have an account yet?&nbsp;<%= link_to "Register now", signup_path, style: "color: cadetblue;" %></div>
      </div>
  <div class="col-md-8 banner-sec">
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block img-fluid" src="https://lamtrip.com/uploads/medium_thumbs/Delicious-Food.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
            <div class="banner-text">
                <h2>ROOFTOP</h2>
                <p>Đăng nhập hoặc đăng ký ngay để nhận được nhiều ưu đãi!</p>
            </div>  
        </div>
      </div>
    </div>
  </div>
</div>
</section>