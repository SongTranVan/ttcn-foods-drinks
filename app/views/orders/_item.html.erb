<tr>
  <td class="">
    <div class="media">
      <a class="thumbnail pull-left" href="#">
        <%= link_to image_tag(item.product.images, :size => "50x50"),product_path(item), class: "media-object  img-circle", style:"max-height: 50px;max-width: 50px;margin-right: 20px;" %>
      </a>
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to item.name, product_path(item), class: "product-name" %>
        </h4>
      </div>
    </div>
  </td>
  <td class="text-center"><strong><%= item.quantity %></strong></td>
  <td class="text-center"><strong><%= number_to_currency item.price %></strong></td>
  <td class="text-right"><strong><%= number_to_currency item.total %></strong></td>
</tr>
