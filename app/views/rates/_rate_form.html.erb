<%= form_for :rate, url: rates_path, remote: true do |f| %>
  <div class="rating-chooser">
    <p class="rate-text"><%= t "rates.your_rate_text" %></p>
    <div class="rating-wrap-post">
      <i id="1" class="fa fa-star" onclick="set('1')"></i>
      <i id="2" class="fa fa-star" onclick="set('2')" ></i>
      <i id="3" class="fa fa-star" onclick="set('3')"></i>
      <i id="4" class="fa fa-star" onclick="set('4')" ></i>
      <i id="5" class="fa fa-star" onclick="set('5')"></i>
      <%= f.hidden_field :point, id: :review_rating, style: "display:none", id:"star"%>
    </div>
    <%= javascript_include_tag "rates" %>
  </div>
  <div class="comment-panel">
    <%= f.text_area :comment, placeholder: t("products.show.your_comment_holder"),
      rows: Settings.rows, class: "form-control" %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.submit t("products.show.comment"), class: "add-product btn btn-outline-danger" %>
  </div>
<% end %>
