<%= form_for :rate, url: rates_path, remote: true do |f| %>
  <div class="rating-chooser">
    <p class="rate-text" style="margin-top: 20px;font-weight: 800;margin-bottom: 0px"><%= t "rates.your_rate_text" %></p>
    <div class="rating-wrap-post" style="margin-bottom: 10px">
      <i id="1" class="fas fa-star" onclick="set('1')"></i>
      <i id="2" class="fas fa-star" onclick="set('2')" ></i>
      <i id="3" class="fas fa-star" onclick="set('3')"></i>
      <i id="4" class="fas fa-star" onclick="set('4')" ></i>
      <i id="5" class="fas fa-star" onclick="set('5')"></i>
      <%= f.hidden_field :point, id: :review_rating, style: "display:none", id:"star"%>
    </div>
    <%= javascript_include_tag "rates" %>
  </div>
  <div class="comment-panel">
    <%= f.text_area :comment, placeholder: t("products.show.your_comment_holder"),
      rows: 3, class: "form-control", style:"margin-bottom: 10px" %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.submit t("products.show.comment"), class: "add-product btn btn-info", style:"float: right;" %>
    <div class="clearfix"></div>
  </div>
<% end %>